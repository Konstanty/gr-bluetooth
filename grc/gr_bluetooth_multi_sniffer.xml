  <param>
    <name>squelch_threshold</name>
    <key>squelch_threshold</key>
    <type>float</type>
  </param>
  <param>
    <name>tun</name>
    <key>tun</key>
    <type>bool</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

</block>
